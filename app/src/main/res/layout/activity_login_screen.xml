<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="socialcompany.social.LoginScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Chuser"
        android:id="@+id/ChuserText"
        android:layout_marginTop="68dp"
        android:textColor="#142af5"
        android:textStyle="bold|italic"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username:"
        android:id="@+id/UsernameText"
        android:layout_marginTop="66dp"
        android:textColor="#ffffff"
        android:background="#142af5"
        android:layout_below="@+id/ChuserText"
        android:layout_alignRight="@+id/CreateAccountButton"
        android:layout_alignEnd="@+id/CreateAccountButton"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/UsernameInput"
        android:layout_below="@+id/UsernameText"
        android:layout_alignLeft="@+id/UsernameText"
        android:layout_alignStart="@+id/UsernameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/PasswordText"
        android:layout_below="@+id/UsernameInput"
        android:layout_alignLeft="@+id/UsernameInput"
        android:layout_alignStart="@+id/UsernameInput"
        android:background="#142af5"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordInput"
        android:layout_below="@+id/PasswordText"
        android:layout_alignLeft="@+id/PasswordText"
        android:layout_alignStart="@+id/PasswordText"
        android:layout_alignRight="@+id/UsernameInput"
        android:layout_alignEnd="@+id/UsernameInput"
        android:phoneNumber="false"
        android:password="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/CreateAccountButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/LoginButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
